<Window
    Height="450"
    ShowInTaskbar="False"
    Title="Settings"
    Width="800"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    mc:Ignorable="d"
    x:Class="CFABingo.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:CFABingo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TabControl>
            <TabItem Header="Theme">
                <StackPanel>
                    <controls:SettingsOption Title="Primary Colour" Type="Colour" />
                    <controls:SettingsOption Title="Secondary Colour" Type="Colour" />
                </StackPanel>
            </TabItem>
            <TabItem Header="Constraints">
                <StackPanel>
                    <controls:SettingsOption Title="Width" Type="Integer" />
                    <controls:SettingsOption Title="Height" Type="Integer" />
                </StackPanel>
            </TabItem>
        </TabControl>

    </Grid>
</Window>

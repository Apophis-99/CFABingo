<UserControl
    d:DesignHeight="300"
    d:DesignWidth="500"
    mc:Ignorable="d"
    x:Class="CFABingo.Controls.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CFABingo.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Style="{StaticResource Menu}">
        <Border
            Style="{StaticResource MainMenu}"
            Visibility="Collapsed"
            x:Name="MainMenu">
            <StackPanel>
                <Button Content="Option 1" />
                <Button Content="Option 2" />
                <Button Content="Option 3" />
                <Button Content="Option 4" />
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
